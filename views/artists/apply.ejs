<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>

  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/inscription.css">
</head>

<body class="page--apply">
  <header class="topbar topbar--minimal">
    <div class="container topbar__inner">
      <a class="logo logo--center" href="/">
        <img src="/images/logo.png" alt="Logo Annuaire" class="logo__img">
        <span class="logo__text">Retour à l'Annuaire</span>
      </a>
    </div>
  </header>

  <main class="applySection">
    <div class="container">
      <form class="applyForm" method="POST" action="/artists/apply">
        <h1>Inscription artiste</h1>

        <!-- honeypot anti-bot -->
        <div class="hp" aria-hidden="true">
          <input type="text" name="honeypot" tabindex="-1" autocomplete="off">
        </div>

        <label>Nom / Studio</label>
        <input name="name" required autocomplete="organization">

        <label>Ville</label>
        <input name="city" required autocomplete="address-level2">

        <label>Code postal</label>
        <input
          name="postalCode"
          required
          inputmode="numeric"
          pattern="[0-9]{5}"
          maxlength="5"
          placeholder="Ex: 47000"
          autocomplete="postal-code"
        >

        <label>Téléphone (facultatif)</label>
        <input
          name="phone"
          type="tel"
          autocomplete="tel"
          placeholder="06 12 34 56 78"
          inputmode="tel"
        >

        <label>Styles (séparés par virgules)</label>
        <input name="styles" placeholder="Fine line, Floral" required>

        <label>Instagram (facultatif)</label>
        <input name="instagram" type="url" placeholder="https://instagram.com/...">

        <label>Facebook (facultatif)</label>
        <input name="facebook" type="url" placeholder="https://facebook.com/...">

        <label>Site internet (facultatif)</label>
        <input name="website" type="url" placeholder="https://...">

        <label>Email de contact</label>
        <input name="email" type="email" required autocomplete="email">

        <label>Bio / présentation</label>
        <textarea
          name="bio"
          rows="6"
          class="textareaBio"
          placeholder="Présentez votre univers, votre expérience, vos spécialités..."></textarea>

        <button type="submit">Envoyer ma demande</button>
      </form>
    </div>
  </main>
</body>
</html>